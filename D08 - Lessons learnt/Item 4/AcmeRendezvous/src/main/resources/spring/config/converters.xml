<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:util="http://www.springframework.org/schema/util"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd		
		http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-4.0.xsd		
	">

	<util:list id="converters">
	
		<bean class="converters.AdministratorToStringConverter" />
		<bean class="converters.StringToAdministratorConverter" />
		
		<bean class="converters.AnnouncementToStringConverter" />
		<bean class="converters.StringToAnnouncementConverter" />
		
		<bean class="converters.CommentToStringConverter" />
		<bean class="converters.StringToCommentConverter" />
		
		<bean class="converters.RendezvousToStringConverter" />
		<bean class="converters.StringToRendezvousConverter" />
		
		<bean class="converters.UserToStringConverter" />
		<bean class="converters.StringToUserConverter" />
		
		<bean class="converters.QuestionToStringConverter" />
		<bean class="converters.StringToQuestionConverter" />
		
		<bean class="converters.RSVPToStringConverter" />
		<bean class="converters.StringToRSVPConverter" />
		
		<bean class="converters.GPSCoordinatesToStringConverter" />
		<bean class="converters.StringToGPSCoordinatesConverter" />
		
		<bean class="converters.AnswerToStringConverter" />
		<bean class="converters.StringToAnswerConverter" /> 
		
		<!-- 
		<bean class="converters.ReplyToStringConverter" />
		<bean class="converters.StringToReplyConverter" />
		
		-->
		
	</util:list>
	
</beans>